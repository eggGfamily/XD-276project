<h1>User#show</h1>

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p>Find me in app/views/user/show.html.erb</p>
<p>User Name:<%= @user.name %></p>
<p>User Email:<%= @user.email %></p>
<p>User ID:<%= @user.id %></p>